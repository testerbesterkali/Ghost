{
    "manifest_version": 3,
    "name": "Ghost Shadow",
    "version": "1.0.0",
    "description": "Autonomous Workflow Observation Engine â€” Captures behavioral intent vectors for workflow automation.",
    "permissions": [
        "activeTab",
        "storage",
        "tabs",
        "declarativeNetRequest",
        "alarms"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "service-worker.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content-script.js"
            ],
            "run_at": "document_idle",
            "all_frames": false
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Ghost Shadow"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    },
    "icons": {
        "16": "icons/icon-16.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    }
}